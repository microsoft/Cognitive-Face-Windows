<Application x:Class="Photo_Detect_Catalogue_Search_WPF_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Photo_Detect_Catalogue_Search_WPF_App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Grid x:Key="WaitingLock" Background="#FFFFFF">
            <TextBlock Text="Please wait..." FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Style TargetType="Button" x:Key="CloseButton" >
            <Setter Property="Padding" Value="0,0,0,1" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Content" Value="X"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
